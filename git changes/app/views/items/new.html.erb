                <div class="row" style="height:100px"></div>
                <div class="container" style="background-color:white; width:70%; height:900px">
                  <% provide(:title, 'New Item') %>
          <h1>Item#new</h1>
          
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= form_for(@item, url: new_item_path) do |f| %>
              
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
          
                <%= f.label :link %>
                <%= f.text_field :link, class: 'form-control' %>
          
                <%= f.label :target_price %>
                <%= f.number_field :target_price, class: 'form-control' %>

                <%= f.label :current_price %>
                <%= f.number_field :current_price, class: 'form-control' %>
                <h5>NOTE: The current price will be pulled automatically in future versions. This is purely for testing purposes.</h5>
          
                <%= f.submit "Add Item", class: "btn" %>
              <% end %>
            </div>
          </div>
                </div>
