                  <% provide(:title, 'New Item') %>
          <h1>Item#new</h1>
          
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div><p>Name: <%= @item.name %></p></div>
	      <div><p>Link: <%= @item.link %></p></div>
              <div><p>Target Price: <%= @item.target_price %></p></div>
              <div><p><%= button_to 'Edit Item', edit_item_path(@item), :method => :get %></p></div>
              <div><p><%= button_to 'Delete Item', item_path(@item), :method => :delete, :confirm => 'Are you sure?'%></p></div>
            </div>
          </div>
